# =============================================================================
# API Configuration - Staging
# =============================================================================
# Backend API service configuration for staging environment.
#
# NOTE: Database credentials are in .env.db.staging (separate file)
#
# Usage: Copy to .env.api.staging
#   cp .env.api.staging.example .env.api.staging
# =============================================================================

# -----------------------------------------------------------------------------
# Database Connection (credentials in .env.db.staging)
# -----------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# -----------------------------------------------------------------------------
# Redis Connection (credentials in .env.db.staging)
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TLS_ENABLED=false
REDIS_POOL_SIZE=25

# -----------------------------------------------------------------------------
# Seed Data
# -----------------------------------------------------------------------------
SEED_TEST_DATA=true

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=rediver
APP_ENV=staging
APP_DEBUG=false
LOG_LEVEL=info
LOG_FORMAT=json
VERSION=v0.1.1

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_REQUEST_TIMEOUT=30s
GRPC_PORT=9090

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
AUTH_PROVIDER=local

# CRITICAL: Generate a secure secret (min 64 characters)
# Generate with: openssl rand -base64 48
AUTH_JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_48

AUTH_JWT_ISSUER=rediver-api
AUTH_ACCESS_TOKEN_DURATION=15m
AUTH_REFRESH_TOKEN_DURATION=168h
AUTH_SESSION_DURATION=720h

# Password policy
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_PASSWORD_REQUIRE_UPPERCASE=true
AUTH_PASSWORD_REQUIRE_LOWERCASE=true
AUTH_PASSWORD_REQUIRE_NUMBER=true
AUTH_PASSWORD_REQUIRE_SPECIAL=false

# Security
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=15m
AUTH_MAX_ACTIVE_SESSIONS=10

# Registration
AUTH_ALLOW_REGISTRATION=true
AUTH_REQUIRE_EMAIL_VERIFICATION=false

# -----------------------------------------------------------------------------
# Keycloak (Optional - only for oidc or hybrid auth)
# -----------------------------------------------------------------------------
# KEYCLOAK_BASE_URL=http://localhost:8180
# KEYCLOAK_REALM=rediver
# KEYCLOAK_CLIENT_ID=rediver-api
# KEYCLOAK_JWKS_REFRESH_INTERVAL=1h

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Request-ID

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# -----------------------------------------------------------------------------
# SMTP Email (Optional)
# -----------------------------------------------------------------------------
SMTP_ENABLED=false
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@rediver.io
# SMTP_FROM_NAME=Rediver
# SMTP_TLS=true
# SMTP_BASE_URL=http://localhost:3000
