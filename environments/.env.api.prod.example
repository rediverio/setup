# =============================================================================
# API Configuration - Production
# =============================================================================
# Backend API service configuration for production environment.
#
# NOTE: Database credentials are in .env.db.prod (separate file)
#
# IMPORTANT: Update ALL <CHANGE_ME> values before deployment!
#
# Usage: Copy to .env.api.prod
#   cp .env.api.prod.example .env.api.prod
# =============================================================================

# -----------------------------------------------------------------------------
# Database Connection (credentials in .env.db.prod)
# -----------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_SSLMODE=require
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=10

# -----------------------------------------------------------------------------
# Redis Connection (credentials in .env.db.prod)
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TLS_ENABLED=false
REDIS_POOL_SIZE=50

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=rediver
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=info
LOG_FORMAT=json
VERSION=latest

# PRODUCTION LOG SAMPLING (reduces log volume by ~80%)
# See api/docs/development/logging.md for details
LOG_SAMPLING_ENABLED=true        # Enable sampling in production
LOG_SAMPLING_THRESHOLD=100       # First 100 identical logs per second
LOG_SAMPLING_RATE=0.1            # Then 10% of remaining
LOG_ERROR_SAMPLING_RATE=1.0      # Always log errors
LOG_SKIP_HEALTH=true             # Skip health check endpoints
LOG_SLOW_REQUEST_SECONDS=5       # Warn on slow requests

# CRITICAL: Encryption key for credentials (integrations, API keys, etc.)
# Generate with: openssl rand -hex 32
# REQUIRED in production - credentials will fail without this
APP_ENCRYPTION_KEY=<CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32>

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_REQUEST_TIMEOUT=30s
GRPC_PORT=9090

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
AUTH_PROVIDER=local

# CRITICAL: Generate a secure secret (min 64 characters)
# Generate with: openssl rand -base64 48
AUTH_JWT_SECRET=<CHANGE_ME_GENERATE_WITH_OPENSSL>

AUTH_JWT_ISSUER=api
AUTH_ACCESS_TOKEN_DURATION=15m
AUTH_REFRESH_TOKEN_DURATION=168h
AUTH_SESSION_DURATION=720h

# Password policy
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_PASSWORD_REQUIRE_UPPERCASE=true
AUTH_PASSWORD_REQUIRE_LOWERCASE=true
AUTH_PASSWORD_REQUIRE_NUMBER=true
AUTH_PASSWORD_REQUIRE_SPECIAL=true

# Security
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=15m
AUTH_MAX_ACTIVE_SESSIONS=10

# Registration
AUTH_ALLOW_REGISTRATION=false
AUTH_REQUIRE_EMAIL_VERIFICATION=true

# -----------------------------------------------------------------------------
# Keycloak (Optional - only for oidc or hybrid auth)
# -----------------------------------------------------------------------------
# KEYCLOAK_BASE_URL=https://auth.yourdomain.com
# KEYCLOAK_REALM=rediver
# KEYCLOAK_CLIENT_ID=api
# KEYCLOAK_JWKS_REFRESH_INTERVAL=1h

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=https://<CHANGE_ME_YOUR_DOMAIN>
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
# Note: X-Admin-API-Key is required for Admin UI authentication
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Request-ID,X-Admin-API-Key

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# -----------------------------------------------------------------------------
# SMTP Email
# -----------------------------------------------------------------------------
SMTP_ENABLED=true
SMTP_HOST=<CHANGE_ME_SMTP_HOST>
SMTP_PORT=587
SMTP_USER=<CHANGE_ME>
SMTP_PASSWORD=<CHANGE_ME>
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Rediver
SMTP_TLS=true
SMTP_BASE_URL=https://<CHANGE_ME_YOUR_DOMAIN>
